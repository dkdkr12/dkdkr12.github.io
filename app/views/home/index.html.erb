

    
<% @poke.each do |p| %>  
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="thumbnail">
                <img src="<%= p.image %>" alt="...">
                <div class="caption">
                    <h3 style="text-align:center"><%= p.num %><%= p.name %></h3>
                        <p><%= p.content %></p>
                        <p><a href="/home/edit/<%= p.id %>" class="btn btn-default" role="button">수정</a> <a href="/home/destroy/<%= p.id %>" class="btn btn-default" role="button">삭제</a></p>
                  </div>
            </div>
        </div>
    </div>
<% end %>